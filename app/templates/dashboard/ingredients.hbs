

<h3 class='title is-3'>
  Recent Ingredients
</h3>

<div class="columns">

  <hr>

  {{#each model.recentIngredients as |recentIngredient|}}

    <div class="column">
      <div class="card">

        <div class="card-image">
          <figure class="image">
            <img src="http://bulma.io/images/placeholders/1280x960.png" alt="Image">
          </figure>
        </div>

        <div class="card-content">
          <div class="content">
            Ingredient {{recentIngredient}}
          </div>
        </div>
      </div>
    </div>

  {{/each}}

</div>

{{outlet}}
