<div class="">

  {{foode-recipe-header title='Whats Cooking'}}

  <div class="columns">

    <div class="meal-category-column">
      <div class="notification is-primary meal-category">
        <h4 class='title is-4'>
          <div class="fa fa-coffee"></div>
        </h4>
        Breakfast
      </div>
    </div>

    {{foode-recipe-list recipes=model.breakfastRecipes onEditRecipe='onEditRecipe' onAddRecipe='onAddRecipe' onFavoriteRecipe='onFavoriteRecipe'}}

  </div>


  <div class="columns" style='margin-top : 20px;'>

    <div class="meal-category-column">
      <div class="notification is-info meal-category">
        <h4 class='title is-4'>
          <div class="fa fa-coffee"></div>
        </h4>
        Lunch
      </div>
    </div>

    {{foode-recipe-list recipes=model.lunchRecipes onEditRecipe='onEditRecipe' onAddRecipe='onAddRecipe' onFavoriteRecipe='onFavoriteRecipe'}}

  </div>


  <div class="recipe-header-row has-text-right">
    {{#link-to 'dashboard.recipes.filter' 'Lunch'}}
      <h5 class='title is-5 see-more-link'>
        See More....
      </h5>
    {{/link-to}}
  </div>
</div>



