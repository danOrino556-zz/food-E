<div class="columns">

  <div class="column is-one-third">
    <figure class="image image is-16by9">
      <img src={{recipe.imageUrl}} alt="Image">
    </figure>
  </div>

  <div class="column">

    <h3 class='title is-3'>
      {{recipe.name}}

      {{#if recipe.favorite}}
        <span class='fa fa-heart'></span>
      {{/if}}
    </h3>

    <h4 class='title is-4'>
      {{foode-recipe-stars stars=recipe.stars}}
    </h4>

    <div class="">
      Prep Time : {{recipe.prepTime}}
    </div>

    <div class="">
      Cook Time : {{recipe.cookTime}}
    </div>

    <div class="">
      Servings : {{recipe.servings}}
    </div>
  </div>
</div>
